


<%=render 'shared/errors', obj: @article%>

<div class="row">
  <div class="col-md-12">
      <%=form_for(@article,:html=>{class: "form-horizontal", role: "form"}) do |f|%>
        <div class="form-group">
          <label class="col-sm-2 control-label">
            <%=f.label :Title%> <br>
          </label>
        
          <div class="col-sm-8">
            <%=f.text_field :title, class: "form-control", placeholder:"Title of article", autofocus:true %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-sm-2 control-label">
            <%=f.label :Content%> <br>
          </label>
          <div class="col-sm-8">
            <%=f.text_area :description, rows:20, class: "form-control", placeholder:"Contents of article", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%=f.submit class: "btn btn-default"%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
             <%= link_to 'Back to article list', articles_path, class: "btn btn-default" %>
          </div>
        </div>
      <%end%>


      
  </div>
</div>


